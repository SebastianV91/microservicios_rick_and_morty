

services:
  rickmorty:
    build: rickmortybd
    mem_limit: 512m
    ports:
      - "8080:8080"
    environment:
      DB_URL: jdbc:mysql://rick_morty:3306/rickmortybd
      DB_USER_NAME: root
      DB_PASSWORD: 12345678
    restart: always
    depends_on:
      rick_morty:
          condition: service_healthy
  rick_morty:
    image: mysql:8.0.33 
    ports:
      - "3307:3306"
    environment:
      MYSQL_ROOT_PASSWORD: 12345678
      MYSQL_PASSWORD: 12345678
      MYSQL_DATABASE: rickmortybd
    restart: always
    healthcheck:
      test: ["CMD", "mysqladmin" ,"ping", "-h", "localhost"]
      timeout: 10s
      retries: 10